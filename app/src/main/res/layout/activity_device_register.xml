<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".views.ui.DeviceRegisterActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/device_register_button"
        app:layout_constraintBottom_toTopOf="@id/tv_device_none"
        app:layout_constraintLeft_toLeftOf="@id/tv_device_none"
        app:layout_constraintRight_toRightOf="@id/tv_device_none"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 장치가 없습니다."
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/device_register_button"
        android:onClick="clickSearchDevice"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="새 장치 등록"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_device_none"
        app:layout_constraintRight_toRightOf="@id/tv_device_none"
        app:layout_constraintTop_toBottomOf="@id/tv_device_none" />

</androidx.constraintlayout.widget.ConstraintLayout>